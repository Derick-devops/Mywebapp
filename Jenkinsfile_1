pipeline {
    agent any

    tools {
        jdk 'JDK17'                // Must match the name configured in Jenkins
        maven 'maven3.9.11'        // Same here
    }

    environment {
        VERSION = "${new Date().format('yyyyMMddHHmmss')}"  // auto versioning
    }

    stages {

        stage('Git Clone') {
            steps {
                echo 'üì• Cloning the latest application version...'
                git branch: 'main', url: 'https://github.com/dobretechproject/maven-web-pro1.git'
            }
        }

        stage('Build & Test') {
            steps {
                echo 'üß™ Running unit tests and building the project...'
                sh 'mvn clean package -DskipTests=false'
                echo '‚úÖ Tests passed and WAR file created.'
            }
        }

        stage('Code Quality - SonarQube') {
            environment {
                SONARQUBE_TOKEN = credentials('SONARQUBE_TOKEN')  // create in Jenkins
            }
            steps {
                echo 'üîç Running SonarQube analysis...'
                withSonarQubeEnv('sonarqube') {
                    sh """
                        mvn sonar:sonar \
                        -Dsonar.login=$SONARQUBE_TOKEN
                    """
                }
            }
        }

        stage('Upload Artifacts to Nexus') {
            steps {
                echo 'üì§ Uploading build artifacts to Nexus...'
                withCredentials([usernamePassword(
                    credentialsId: 'nexus',     // must exist in Jenkins
                    usernameVariable: 'NEXUS_USER',
                    passwordVariable: 'NEXUS_PASS'
                )]) {
                    sh """
                        mvn deploy \
                        -Dnexus.username=$NEXUS_USER \
                        -Dnexus.password=$NEXUS_PASS \
                        -Dbuild.version=${VERSION}
                    """
                }
                echo '‚úÖ Artifacts successfully pushed to Nexus.'
            }
        }
    }

    post {
        success {
            echo "üéâ CI pipeline completed successfully for version ${VERSION}"
        }
        failure {
            echo "‚ùå CI pipeline failed. Check logs for details."
        }
    }
}
